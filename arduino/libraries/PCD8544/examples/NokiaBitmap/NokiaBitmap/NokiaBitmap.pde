  // Iniciando o Display
  lcd.begin(84, 48);
  
  // Ajustando o cursor na tela
  lcd.setCursor(0,0);
  
  // Desenhando o Bitmap
  lcd.drawBitmap(logo_arduino, 84, 48);
}


void loop() {
  // Desliga a tela por 2 segundos  
  lcd.setPower(false);
  delay(2000);
  
  // Liga a tela por 5 segundos
  lcd.setPower(true);
  delay(5000);
}
